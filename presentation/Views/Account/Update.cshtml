@model business_logic.DTOs.UpdatedUserDto;

@{
    ViewData["Title"] = "Update";
}

<!--User Info Update Form-->
<form class="col-6 mx-auto mt-5" asp-controller="Account" asp-action="Update" method="post">
    <h2 class="text-primary">Update Account Info</h2>
    <div class="mb-3">
        <label for="Name" class="form-label">New Name</label>
        <input type="text" asp-for="NewName" class="form-control" id="NewName">
        <span asp-validation-for="NewName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="CurrentPassword" class="form-label">Current Password</label>
        <input type="password" asp-for="CurrentPassword" class="form-control" id="CurrentPassword">
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="NewPassword" class="form-label">New Password</label>
        <input type="password" asp-for="NewPassword" class="form-control" id="NewPassword">
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
{
    <!--Client Side Validation Script-->
    <partial name="_ValidationScriptsPartial" />
}
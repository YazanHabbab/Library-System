@model business_logic.DTOs.UserDto;

@{
    ViewData["Title"] = "Register New Account";
    Layout = "_AccountLayout";
}

<!--User Registeration Form-->
<form class="col-lg-4 mx-auto mt-2" asp-controller="Account" asp-action="Register" method="post">
    <h2 class="text-primary d-flex justify-content-center">Register</h2>
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" asp-for="Password" class="form-control" id="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="ConfirmPassword" class="form-label">Confirm Password</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
    <div class="d-flex justify-content-center"><a class="text-muted mt-3 align-middle" asp-controller="Account" asp-action="Login">Already have an account? Login
            now.</a>
    </div>
</form>

@section Scripts
{
    <!--Client Side Validation Script-->
    <partial name="_ValidationScriptsPartial" />
}
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/presentation.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light .bg-primary bg-primary bg-gradient border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Library"
                    asp-action="AllBooks">Library System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account"
                                    asp-action="Update">@User.FindFirst(ClaimTypes.Name)!.Value</a>
                            </li>
                            @if (@User.FindFirst(ClaimTypes.Name)!.Value.Equals("Admin",
                           StringComparison.OrdinalIgnoreCase))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Account" asp-action="AllUsers">All Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Library" asp-action="AllBorrowings">All Users
                                        Borrowings</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Library" asp-action="AddBook">Add a Book</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Library" asp-action="AllBooks">Browse</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Library" asp-action="MyBorrowings">My
                                    Borrowings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="background-color: #EEE;">
        <h2 class="text-primary text-center py-2">@ViewData["Title"]</h2>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* For notifications *@
    <partial name="_Notification" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

@model business_logic.DTOs.BookDto;

@{
    ViewData["Title"] = "Add a Book";
}

<!--Adding Book Form-->
<form class="col-6 mx-auto mt-5" asp-controller="Library" asp-action="AddBook" method="post">
    <div class="mb-3">
        <label for="ISBN" class="form-label">ISBN</label>
        <input type="text" asp-for="ISBN" class="form-control" id="ISBN">
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Name" class="form-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" id="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Author" class="form-label">Author</label>
        <input type="text" asp-for="Author" class="form-control" id="Author">
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>

@section Scripts
{
    <!--Client Side Validation Script-->
    <partial name="_ValidationScriptsPartial" />
}